<%= simple_form_for @message, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :content %>
  <%= f.input :template_id %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                messages_path, :class => 'btn' %>
  </div>
<% end %>
